{
  "name": "tu-varna-gamedev-catalogue",
  "version": "1.0.0",
  "description": "A catalogue of game development companies",
  "private": true,
  "scripts": {
    "start": "nest start -p backend/tsconfig.json",
    "start:dev": "pnpm start --watch",
    "start:debug": "pnpm start --debug --watch",
    "start:prod": "node dist/backend/main.js",
    "build": "pnpm build:backend && pnpm build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "next build frontend",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "pnpm typeorm migration:generate -d backend/data-source.ts",
    "migration:run": "pnpm typeorm migration:run -d backend/data-source.ts",
    "migration:revert": "pnpm typeorm migration:revert -d backend/data-source.ts",
    "seed": "ts-node backend/seeds/seed.ts",
    "test": "NODE_ENV=test jest",
    "test:watch": "pnpm test --watch",
    "test:cover": "pnpm test --coverage",
    "prettier": "prettier \"{backend,frontend,migrations}/**/*.{ts,tsx,json,css}\"",
    "prettier:fix": "pnpm prettier --write",
    "prettier:lint": "pnpm prettier --check",
    "eslint:lint": "eslint \"{backend,frontend,migrations}/**/*.{ts,tsx}\"",
    "eslint:fix": "pnpm eslint:lint --fix",
    "lint": "pnpm eslint:lint && pnpm prettier:lint",
    "lint:fix": "pnpm eslint:fix && pnpm prettier:fix"
  },
  "dependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "@sinclair/typebox": "^0.34.41",
    "config": "^4.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "next": "^15.5.6",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.6",
    "@types/config": "^3.3.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.38.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.14",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
